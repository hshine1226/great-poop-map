extends layouts/main
block content
    .join__wrapper(class="w-full h-full flex justify-center items-center")    
        form.join__form#jsJoinForm(class="bg-white shadow-md rounded px-10 pt-6 pb-8 mb-4", action=routes.join, method="post")
            div.form--id(class="mb-4")
                label(class="block text-gray-700 text-base font-bold mb-3", for="name") 이름
                input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", name="name", id="name", type="text", placeholder="이름", required=true) 
            div.form--id(class="mb-4")            
                label(class="block text-gray-700 text-base font-bold mb-3", for="email") 이메일
                div(class="flex")
                    input(class="shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", name="email", id="email", type="email", placeholder="E-mail", required=true)
                    button(type="button" class="ml-3 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full", id="jsEmailCheck") 중복확인
                div#id_check(class="mt-2")
            div.form--gender(class="mb-4")
                label(class="block text-gray-700 text-base font-bold mb-3", for="gender") 성별
                .input__radio
                    input(type="radio" id="male" name="gender" value="male" required=true)
                    label(for="male" class="mx-2") 남자
                    input(type="radio" id="female" name="gender" value="female" required=true) 
                    label(for="female" class="mx-2") 여자

            div.form--password(class="mb-6")
                label(class="block text-gray-700 text-base font-bold mb-3", for="password") 비밀번호
                input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", name="password", id="password", type="password", placeholder="************", required=true)
                label(class="block text-gray-700 text-base font-bold mb-3", for="password2") 비밀번호 확인
                input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline", name="password2", id="password2", type="password", placeholder="************", required=true)
            div.form--btn(class="flex items-center justify-end")
                input(id="sign", type="submit", value="회원가입", class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer")
                
                
            