extends layouts/main
block content
    .form__wrapper(class="w-full h-full flex justify-center items-center")    
        form.form(class="bg-white shadow-md rounded px-10 pt-6 pb-8 mb-4")
            div.form--id(class="mb-4")
                label(class="block text-gray-700 text-base font-bold mb-3" for="username") 사용자 ID
                input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="text" placeholder="Username") 
            div.form--password(class="mb-6")
                label(class="block text-gray-700 text-base font-bold mb-3" for="password") 비밀번호
                input(class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************")
                //- p(class="text-red-500 text-xs italic") Please choose a password
            div.form--btn(class="flex items-center justify-between")
                a(class="text-blue-500 font-bold mr-3 rounded focus:outline-none focus:shadow-outline" type="button") 회원가입                
                button(class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" href="#") 로그인
                
            